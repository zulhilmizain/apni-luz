<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:orientation="horizontal"></LinearLayout>

        <LinearLayout
            android:id="@+id/llFirstBtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtFirstBtnName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Activities"
                android:textColor="@android:color/background_light" />

            <View
                android:id="@+id/viewFirstBtnLine"
                android:layout_width="match_parent"
                android:layout_height="2dp"

                android:background="@android:color/background_light" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llSecondBtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtSecondBtnName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Point of Interest"
                android:textColor="@android:color/white" />

            <View
                android:id="@+id/viewSecondBtnLine"
                android:layout_width="match_parent"
                android:layout_height="2dp"

                android:background="@android:color/background_light" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v4.view.ViewPager
            android:id="@+id/poiCardViewPager"
            android:layout_width="match_parent"
            android:layout_height="400px"
            android:background="@android:color/transparent"
            android:clipToPadding="false"
            android:overScrollMode="never" />

    </LinearLayout>
</LinearLayout>
